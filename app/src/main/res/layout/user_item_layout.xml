<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_black_background"
>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
    >
        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_img_search"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
        />
        <TextView
                android:id="@+id/user_name_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user name"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/user_profile_img_search"
        />

        <TextView
                android:id="@+id/user_full_name_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user profile name"
                android:gravity="center"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/user_name_search"
        />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_follow_search"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/user_full_name_search"
                android:text="Follow"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
        />

    </RelativeLayout>

</RelativeLayout>